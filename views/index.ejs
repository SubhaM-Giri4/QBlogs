<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
<h2>Trending Blogs & Posts</h2>
<% posts.forEach(function(post) { %>
    <div class="post">
        <h3 class="user">@<%= post.username %></h3>
        <h4 class="content"><%= post.content %></h4>
        <h4 class="email"><%= post.email %></h4>
        <h4 class="date"><%= new Date(post.date).toLocaleString() %></h4>
        <a href="/posts/<%= post.id %>">See in Detail</a>
        <a href="/posts/<%= post.id %>/edit">Edit</a>
        <br>
        <br>
        <form method="post" action="/posts/<%=post.id%>?_method=DELETE">
            <button type="submit">Delete Post</button>
        </form>
    </div>
<% }); %>

<br><br>
<a href="/posts/new">Create New Post</a>
</body>
</html>
